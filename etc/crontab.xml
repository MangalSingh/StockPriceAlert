<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="octocub_spa_process_queue" instance="Octocub\StockPriceAlert\Cron\ProcessQueue" method="execute">
            <schedule>* * * * *</schedule>
        </job>
        <job name="octocub_spa_scan_price_changes" instance="Octocub\StockPriceAlert\Cron\ScanPriceChanges" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
    </group>
</config>
